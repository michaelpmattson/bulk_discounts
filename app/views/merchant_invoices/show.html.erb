<h2>Invoice #<%= @invoice.id %></h2>
<p>Status: <%= @invoice.status %></p>
<p>Created on: <%= @invoice.formatted_date %></p>
<p>Total Revenue: <%= number_to_currency(@revenue) %></p>
<p>Total Discounted Revenue: <%= number_to_currency(@discounted_revenue) %></p>

<p>Customer: <%= @invoice.customer_name %></p>

<h3>Items on this invoice:</h3>
<table id='items'>
  <tr>
    <th>Item Name</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Status</th>
    <th>Discount</th>
  </tr>
  <% @invoice_items.each do |i_i| %>
    <tr id="item-<%= i_i.item_id %>">
      <th><%= i_i.item.name %></th>
      <th><%= i_i.quantity %></th>
      <th><%= i_i.unit_price %></th>
      <th><%= i_i.status %></th>
      <% unless i_i.discount.nil? %>
        <th><%= link_to 'View Discount', merchant_bulk_discount_path(@merchant, i_i.discount.id )%></th>
      <% end %>
    </tr>
  <% end %>
</table>
